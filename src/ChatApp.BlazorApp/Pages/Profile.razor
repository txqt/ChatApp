@using MudBlazor
@inject IDialogService DialogService
@inject ThemeService ThemeService

<MudDialog MaxWidth="MaxWidth.Large" FullWidth="true">
    <DialogContent>
    <MudGrid GutterSize="3">
        <MudItem xs="12">
            <MudCard>
                <!-- Mobile tabs header -->
                <MudHidden Breakpoint="Breakpoint.MdAndUp">
                    <MudTabs Rounded="false" Elevation="0" Align="Center">
                        <MudTabPanel Icon="@Icons.Material.Filled.Person" />
                        <MudTabPanel Icon="@Icons.Material.Filled.CreditCard" />
                        <MudTabPanel Icon="@Icons.Material.Filled.Settings" />
                    </MudTabs>
                </MudHidden>

                <MudCardContent>
                    <!-- Main tabs -->
                    <MudTabs>
                        <MudTabPanel Text="Profile" Value="profile">
                            <UserInfo />
                        </MudTabPanel>

                        <MudTabPanel Text="Friends" Value="friends">
                            <FriendManagement />
                        </MudTabPanel>

                        <MudTabPanel Text="Settings" Value="settings">
                            <MudItem xs="12" Class="mt-4">
                                    <MudSwitch @bind-Checked="@ThemeService.IsDarkMode" Color="Color.Primary" T="bool" ValueChanged="async _ => await ThemeService.ToggleDarkModeAsync()">
                                            Dark Mode
                                        </MudSwitch>
                            </MudItem>
                        </MudTabPanel>
                    </MudTabs>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [CascadingParameter]
    private MainLayout? ParentLayout { get; set; }

    void Close() => MudDialog.Close();
}
